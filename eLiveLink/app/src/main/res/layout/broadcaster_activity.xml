<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.group35.elivelink.MainActivity">

    <com.google.android.youtube.player.YouTubePlayerView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/youtube_view"
        android:minHeight="100px"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">
    </com.google.android.youtube.player.YouTubePlayerView>

    <TableLayout
        android:layout_below="@+id/youtube_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="1"
        android:id="@+id/table1"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        >

        <TableRow>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_column="1">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/controlSpace"
                    android:layout_gravity="center"
                    android:background="#86d8f8"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentStart="true"/>

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:id="@+id/button4"
                    android:minHeight="0dp"
                    android:minWidth="0dp"
                    android:layout_alignTop="@+id/button5"
                    android:layout_alignParentStart="true" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2"
                    android:id="@+id/button5"
                    android:minHeight="0dp"
                    android:minWidth="0dp"
                    android:layout_below="@+id/textView5"
                    android:layout_toEndOf="@+id/button4" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3"
                    android:id="@+id/button6"
                    android:minHeight="0dp"
                    android:minWidth="0dp"
                    android:layout_below="@+id/textView5"
                    android:layout_toEndOf="@+id/button5" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4"
                    android:id="@+id/button7"
                    android:minHeight="0dp"
                    android:minWidth="0dp"
                    android:layout_below="@+id/textView5"
                    android:layout_toEndOf="@+id/button6" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+"
                    android:id="@+id/button8"
                    android:minHeight="0dp"
                    android:minWidth="0dp"
                    android:layout_alignTop="@+id/button7"
                    android:layout_toEndOf="@+id/button7" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:id="@+id/button9"
                    android:minHeight="0dp"
                    android:minWidth="0dp"
                    android:layout_alignTop="@+id/button8"
                    android:layout_toEndOf="@+id/button8" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="&lt;"
                    android:id="@+id/button10"
                    android:minHeight="0dp"
                    android:minWidth="0dp"
                    android:layout_alignTop="@+id/button9"
                    android:layout_toEndOf="@+id/button9" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=">"
                    android:id="@+id/button11"
                    android:minHeight="0dp"
                    android:minWidth="0dp"
                    android:layout_alignTop="@+id/button10"
                    android:layout_toEndOf="@+id/button10" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="^"
                    android:id="@+id/button12"
                    android:minHeight="0dp"
                    android:minWidth="0dp"
                    android:layout_below="@+id/textView8"
                    android:layout_toEndOf="@+id/button11" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="v"
                    android:id="@+id/button13"
                    android:minHeight="0dp"
                    android:minWidth="0dp"
                    android:layout_alignTop="@+id/button12"
                    android:layout_toEndOf="@+id/button12" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Camera"
                    android:id="@+id/textView5"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Zoom"
                    android:id="@+id/textView6"
                    android:layout_above="@+id/button7"
                    android:layout_toEndOf="@+id/button7" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Pan"
                    android:id="@+id/textView7"
                    android:layout_above="@+id/button9"
                    android:layout_alignEnd="@+id/button10" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Tilt"
                    android:id="@+id/textView8"
                    android:layout_above="@+id/button11"
                    android:layout_toEndOf="@+id/button11" />
            </RelativeLayout>
        </TableRow>

        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Stream Setting"
                android:id="@+id/broadcastNameView"
                android:textSize="20dp"
                android:layout_column="1" />

        </TableRow>

        <TableRow>
            <EditText
                android:hint="Broadcast Title"
                android:paddingLeft="16px"
                android:paddingRight="16px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="none"
                android:ems="10"
                android:id="@+id/broadcastEditText"
                android:background="#ffffff"
                android:lines="2"
                android:layout_alignParentStart="true"
                android:textSize="16dp"
                android:layout_column="1" />

        </TableRow>


        <TableRow>
            <EditText
                android:hint="YouTube Link"
                android:paddingLeft="16px"
                android:paddingRight="16px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="none"
                android:ems="10"
                android:id="@+id/youtubeEditText"
                android:background="#ffffff"
                android:lines="2"
                android:layout_alignParentStart="true"
                android:textSize="16dp"
                android:layout_column="1" />

        </TableRow>

        <TableRow>
            <EditText
                android:hint="Price of the Stream"
                android:paddingLeft="16px"
                android:paddingRight="16px"
                android:inputType="numberDecimal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:id="@+id/priceEditText"
                android:background="#ffffff"
                android:lines="2"
                android:layout_alignParentStart="true"
                android:textSize="16dp"
                android:layout_column="1" />

        </TableRow>


        <TableRow>
            <EditText
                android:hint="Bio of the stream"
                android:paddingLeft="16px"
                android:paddingRight="16px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="none"
                android:ems="10"
                android:id="@+id/bioEditText"
                android:background="#ffffff"
                android:lines="3"
                android:layout_alignParentStart="true"
                android:textSize="16dp"
                android:layout_column="1" />

        </TableRow>

        <TableRow>
            <EditText
                android:hint="Schedule of the stream"
                android:paddingLeft="16px"
                android:paddingRight="16px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="none"
                android:ems="10"
                android:id="@+id/scheduleEditText"
                android:background="#ffffff"
                android:lines="3"
                android:layout_alignParentStart="true"
                android:textSize="16dp"
                android:layout_column="1" />

        </TableRow>



        <TableRow>
            <RelativeLayout
                android:layout_column="1"
                android:gravity="center">

                <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Stop"
                android:id="@+id/stopBroadcastButton"
                android:layout_column="1"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/startBroadcastButton"
                    android:onClick="onStopButton" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Save"
                    android:id="@+id/saveSettingButton"
                    android:layout_toEndOf="@+id/stopBroadcastButton"
                    android:layout_alignBottom="@+id/stopBroadcastButton"
                    android:onClick="onSaveButton" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Start"
                    android:id="@+id/startBroadcastButton"
                    android:layout_column="0"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true"
                    android:onClick="onStartButton" />

            </RelativeLayout>
        </TableRow>


    </TableLayout>



</RelativeLayout>